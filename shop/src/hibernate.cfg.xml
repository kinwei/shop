<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

<session-factory>
	<property name="dialect">
		org.hibernate.dialect.MySQLDialect
	</property>
	<!-- 
		<property name="connection.url">
		jdbc:mysql://localhost:3306/shop
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password">jinwei</property>
		<property name="connection.driver_class">
		com.mysql.jdbc.Driver
		</property>
		<property name="myeclipse.connection.profile">
		com.mysql.jdbc.Driver
		</property>
	-->
	<property name="javax.persistence.validation.mode">none</property>
	<property name="show_sql">true</property>
	<!-- 配置二级缓存提供商 此处并不是jar包 -->
	<property name="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
	
	
	<mapping resource="com/jinwei/model/Category.hbm.xml" />
	<mapping resource="com/jinwei/model/Account.hbm.xml" />
	<mapping resource="com/jinwei/model/Product.hbm.xml" />
	<mapping resource="com/jinwei/model/User.hbm.xml" />
	<mapping resource="com/jinwei/model/Forder.hbm.xml" />
	<mapping resource="com/jinwei/model/Sorder.hbm.xml" />
	<mapping resource="com/jinwei/model/Status.hbm.xml" />
	<!-- 配置哪些类支持缓存 -->
	<class-cache usage="read-write" class="com.jinwei.model.Product"/>
	<class-cache usage="read-write" class="com.jinwei.model.Category"/>
	

</session-factory>

</hibernate-configuration>